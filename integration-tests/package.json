{
  "name": "@realm/integration-tests",
  "version": "0.1.0",
  "description": "A wrapper module that can install and run Realm JS tests in various environments",
  "private": true,
  "scripts": {
    "start": "npm start --prefix ./tests --",
    "skippostinstall": "concurrently -m 1 npm:install/*",
    "install/tests": "npm install --ignore-scripts --prefix ./tests",
    "install/node": "npm install --prefix environments/node",
    "install/electron": "npm install --prefix environments/electron",
    "install/react-native": "npm install --prefix environments/react-native",
    "test": "concurrently -m 1 npm:test/*",
    "test/node": "npm test --prefix environments/node",
    "test/electron": "npm test --prefix environments/electron",
    "test/react-native": "npm test --prefix environments/react-native"
  },
  "devDependencies": {
    "concurrently": "^6.0.2"
  }
}
